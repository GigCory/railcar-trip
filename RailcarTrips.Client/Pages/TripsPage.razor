@page "/railcar-trips"
@inject ITripService TripService

<div class="container mt-4">
    <h2 class="mb-4">Railcar Trips Management</h2>

    <!-- Upload Section -->
    <div class="card mb-4">
        <div class="card-header">
            <h5 class="mb-0">Upload Equipment Events</h5>
        </div>
        <div class="card-body">
            <div class="row align-items-center">
                <div class="col-md-6">
                    <InputFile OnChange="HandleFileSelected" accept=".csv" class="form-control" />
                    @if (selectedFile != null)
                    {
                        <small class="text-muted">Selected: @selectedFile.Name</small>
                    }
                </div>
                <div class="col-md-3">
                    <button class="btn btn-primary w-100" @onclick="UploadFile" disabled="@(isUploading || selectedFile == null)">
                        @if (isUploading)
                        {
                            <span class="spinner-border spinner-border-sm me-2" role="status"></span>
                            <span>Processing...</span>
                        }
                        else
                        {
                            <span>Upload & Process</span>
                        }
                    </button>
                </div>
            </div>

            <!-- Upload Results -->
            @if (uploadResult != null)
            {
                <div class="mt-3">
                    @if (uploadResult.Errors.Count == 0)
                    {
                        <div class="alert alert-success alert-dismissible fade show">
                            <strong>Success!</strong> Created @uploadResult.TripsCreated trips from @uploadResult.EventsProcessed events.
                            <button type="button" class="btn-close" @onclick="ClearUploadResult"></button>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-danger alert-dismissible fade show">
                            <strong>Errors:</strong>
                            <ul class="mb-0">
                                @foreach (var error in uploadResult.Errors)
                                {
                                    <li>@error</li>
                                }
                            </ul>
                            <button type="button" class="btn-close" @onclick="ClearUploadResult"></button>
                        </div>
                    }

                    @if (uploadResult.Warnings.Count > 0)
                    {
                        <div class="alert alert-warning alert-dismissible fade show">
                            <strong>Warnings:</strong>
                            <ul class="mb-0">
                                @foreach (var warning in uploadResult.Warnings.Take(10))
                                {
                                    <li>@warning</li>
                                }
                                @if (uploadResult.Warnings.Count > 10)
                                {
                                    <li>... and @(uploadResult.Warnings.Count - 10) more</li>
                                }
                            </ul>
                            <button type="button" class="btn-close" @onclick="ClearUploadResult"></button>
                        </div>
                    }
                </div>
            }
        </div>
    </div>

    <!-- Trips Grid -->
    <div class="card">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h5 class="mb-0">Trips</h5>
            <button class="btn btn-sm btn-outline-secondary" @onclick="LoadTrips" disabled="@isLoading">
                @if (isLoading)
                {
                    <span class="spinner-border spinner-border-sm me-1" role="status"></span>
                }
                Refresh
            </button>
        </div>
        <div class="card-body">
            @if (isLoading)
            {
                <div class="text-center py-4">
                    <div class="spinner-border text-primary" role="status">
                        <span class="visually-hidden">Loading...</span>
                    </div>
                    <p class="mt-2">Loading trips...</p>
                </div>
            }
            else if (trips.Count == 0)
            {
                <div class="text-center py-4 text-muted">
                    <p class="mb-0">No trips found. Upload an equipment events CSV file to get started.</p>
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead class="table-light">
                            <tr>
                                <th>Equipment ID</th>
                                <th>Origin</th>
                                <th>Destination</th>
                                <th>Start Date/Time</th>
                                <th>End Date/Time</th>
                                <th class="text-end">Total Hours</th>
                                <th>Status</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var trip in pagedTrips)
                            {
                                <tr>
                                    <td><strong>@trip.EquipmentId</strong></td>
                                    <td>@trip.Origin</td>
                                    <td>@trip.Destination</td>
                                    <td>@(trip.StartDateTime?.ToString("yyyy-MM-dd HH:mm") ?? "-")</td>
                                    <td>@(trip.EndDateTime?.ToString("yyyy-MM-dd HH:mm") ?? "-")</td>
                                    <td class="text-end">@(trip.TotalTripHours?.ToString("F2") ?? "-")</td>
                                    <td>
                                        @if (trip.IsComplete)
                                        {
                                            <span class="badge bg-success">Complete</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-warning text-dark">In Progress</span>
                                        }
                                    </td>
                                    <td>
                                        <button class="btn btn-sm btn-outline-primary" @onclick="() => ViewTripDetails(trip.TripId)">
                                            View Details
                                        </button>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <!-- Pagination -->
                <div class="d-flex justify-content-between align-items-center mt-3">
                    <div class="text-muted">
                        Showing @(((currentPage - 1) * pageSize) + 1) to @(Math.Min(currentPage * pageSize, trips.Count)) of @trips.Count trips
                    </div>
                    <nav>
                        <ul class="pagination mb-0">
                            <li class="page-item @(currentPage == 1 ? "disabled" : "")">
                                <button class="page-link" @onclick="() => GoToPage(1)" disabled="@(currentPage == 1)">First</button>
                            </li>
                            <li class="page-item @(currentPage == 1 ? "disabled" : "")">
                                <button class="page-link" @onclick="() => GoToPage(currentPage - 1)" disabled="@(currentPage == 1)">Previous</button>
                            </li>
                            @for (int i = Math.Max(1, currentPage - 2); i <= Math.Min(totalPages, currentPage + 2); i++)
                            {
                                var pageNum = i;
                                <li class="page-item @(pageNum == currentPage ? "active" : "")">
                                    <button class="page-link" @onclick="() => GoToPage(pageNum)">@pageNum</button>
                                </li>
                            }
                            <li class="page-item @(currentPage == totalPages ? "disabled" : "")">
                                <button class="page-link" @onclick="() => GoToPage(currentPage + 1)" disabled="@(currentPage == totalPages)">Next</button>
                            </li>
                            <li class="page-item @(currentPage == totalPages ? "disabled" : "")">
                                <button class="page-link" @onclick="() => GoToPage(totalPages)" disabled="@(currentPage == totalPages)">Last</button>
                            </li>
                        </ul>
                    </nav>
                </div>
            }
        </div>
    </div>

    <!-- Trip Details Modal -->
    @if (showModal && selectedTrip != null)
    {
        <div class="modal fade show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
            <div class="modal-dialog modal-lg modal-dialog-centered">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title">Trip Details - @selectedTrip.EquipmentId</h5>
                        <button type="button" class="btn-close" @onclick="CloseModal"></button>
                    </div>
                    <div class="modal-body">
                        @if (isLoadingDetails)
                        {
                            <div class="text-center py-4">
                                <div class="spinner-border text-primary" role="status">
                                    <span class="visually-hidden">Loading...</span>
                                </div>
                            </div>
                        }
                        else
                        {
                            <!-- Trip Summary -->
                            <div class="row mb-4">
                                <div class="col-md-6">
                                    <p><strong>Origin:</strong> @selectedTrip.Origin</p>
                                    <p><strong>Destination:</strong> @selectedTrip.Destination</p>
                                </div>
                                <div class="col-md-6">
                                    <p><strong>Start:</strong> @(selectedTrip.StartDateTime?.ToString("yyyy-MM-dd HH:mm") ?? "-")</p>
                                    <p><strong>End:</strong> @(selectedTrip.EndDateTime?.ToString("yyyy-MM-dd HH:mm") ?? "-")</p>
                                    <p><strong>Total Hours:</strong> @(selectedTrip.TotalTripHours?.ToString("F2") ?? "-")</p>
                                </div>
                            </div>

                            <!-- Events Table -->
                            <h6>Event Timeline</h6>
                            <div class="table-responsive">
                                <table class="table table-sm table-bordered">
                                    <thead class="table-light">
                                        <tr>
                                            <th>Event</th>
                                            <th>Description</th>
                                            <th>City</th>
                                            <th>Local Time</th>
                                            <th>UTC Time</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var evt in selectedTrip.Events)
                                        {
                                            <tr>
                                                <td><span class="badge bg-secondary">@evt.EventCode</span></td>
                                                <td>@evt.EventDescription</td>
                                                <td>@evt.CityName</td>
                                                <td>@evt.EventTimeLocal.ToString("yyyy-MM-dd HH:mm")</td>
                                                <td>@evt.EventTimeUtc.ToString("yyyy-MM-dd HH:mm")</td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        }
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" @onclick="CloseModal">Close</button>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@code {
    private List<TripDto> trips = new();
    private TripWithEventsDto? selectedTrip;
    private IBrowserFile? selectedFile;
    private UploadResultDto? uploadResult;
    private bool isLoading = true;
    private bool isUploading = false;
    private bool isLoadingDetails = false;
    private bool showModal = false;

    // Pagination
    private int currentPage = 1;
    private int pageSize = 10;
    private int totalPages => (int)Math.Ceiling((double)trips.Count / pageSize);
    private List<TripDto> pagedTrips => trips.Skip((currentPage - 1) * pageSize).Take(pageSize).ToList();

    protected override async Task OnInitializedAsync()
    {
        await LoadTrips();
    }

    private async Task LoadTrips()
    {
        isLoading = true;
        StateHasChanged();

        trips = await TripService.GetTripsAsync();
        currentPage = 1;

        isLoading = false;
        StateHasChanged();
    }

    private void HandleFileSelected(InputFileChangeEventArgs e)
    {
        selectedFile = e.File;
        uploadResult = null;
    }

    private async Task UploadFile()
    {
        if (selectedFile == null) return;

        isUploading = true;
        StateHasChanged();

        using var stream = selectedFile.OpenReadStream(maxAllowedSize: 10 * 1024 * 1024); // 10MB max
        uploadResult = await TripService.UploadEventsAsync(stream, selectedFile.Name);

        if (uploadResult.Errors.Count == 0)
        {
            await LoadTrips();
        }

        selectedFile = null;
        isUploading = false;
        StateHasChanged();
    }

    private async Task ViewTripDetails(int tripId)
    {
        showModal = true;
        isLoadingDetails = true;
        selectedTrip = null;
        StateHasChanged();

        selectedTrip = await TripService.GetTripDetailsAsync(tripId);

        isLoadingDetails = false;
        StateHasChanged();
    }

    private void CloseModal()
    {
        showModal = false;
        selectedTrip = null;
    }

    private void ClearUploadResult()
    {
        uploadResult = null;
    }

    private void GoToPage(int page)
    {
        if (page >= 1 && page <= totalPages)
        {
            currentPage = page;
            StateHasChanged();
        }
    }
}
